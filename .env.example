# =============================================================================
# CertLab Environment Configuration
# =============================================================================
# Copy this file to .env and fill in the values as needed.
# Not all variables are required - see descriptions below.
# =============================================================================

# -----------------------------------------------------------------------------
# Build/Vite Configuration
# -----------------------------------------------------------------------------

# Optional: Base path for the application deployment
# Defaults to '/certlab/' in production, '/' in development
# Set to '/' for custom domain deployment or your repo name for GitHub Pages forks
# Examples: VITE_BASE_PATH=/my-fork/ or VITE_BASE_PATH=/
VITE_BASE_PATH=

# Optional: Node environment (set automatically by Vite)
# Values: development, production, test
# NODE_ENV=

# -----------------------------------------------------------------------------
# Server Configuration (for server-side features)
# -----------------------------------------------------------------------------

# Required for server mode: Session secret for secure session management
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=

# Required for server mode: Database connection string (PostgreSQL)
# Format: postgresql://user:password@host:port/database
DATABASE_URL=

# Optional: Your app's base URL (defaults to http://localhost:5000 if not set)
APP_URL=

# -----------------------------------------------------------------------------
# Polar Subscription Management (optional)
# Get these from your Polar dashboard (https://polar.sh)
# -----------------------------------------------------------------------------

# Polar API key for subscription management
POLAR_API_KEY=

# Polar organization ID
POLAR_ORGANIZATION_ID=

# Product IDs from Polar (create products in Polar dashboard first)
POLAR_PRO_PRODUCT_ID=
POLAR_ENTERPRISE_PRODUCT_ID=

# Webhook secret for validating incoming webhooks from Polar
POLAR_WEBHOOK_SECRET=